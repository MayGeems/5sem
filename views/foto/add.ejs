<%-include('../cabecalho.ejs')%>
<div class="app-main__outer">
    <div class="app-main__inner">
        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div class="page-title-icon">
                        <i class="pe-7s-display1 icon-gradient bg-premium-dark">
                        </i>
                    </div>
                    <div>Adicionar Foto
                        <div class="page-title-subheading">Este formulário é usado para adicionar Fotos na
                            aplicação.
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-content">
            <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
                <div class="row">
                    <div class="col-md-12">
                        <div class="main-card mb-3 card">
                            <div class="card-body">
                                <h5 class="card-title">Fotos</h5>
                                <form method="post" enctype="multipart/form-data">
                                    <div class="position-relative form-group">
                                        <label for="exampleNome" class="">Título</label>
                                        <input name="titulo" id="exampleNome" placeholder="Digite seu nome" type="text"
                                            class="form-control">
                                    </div>
                                    <div class="position-relative form-group">
                                        <label for="exampleFile" class="">Foto</label>
                                        <input name="foto" id="exampleFile" type="file" class="form-control-file">
                                        <small class="form-text text-muted">Escolha uma foto para a postagem.</small>
                                    </div>
                                    <div class="position-relative form-group">
                                        <div>
                                            <%Usuarios.forEach(function(usuario){%>
                                            <div class="custom-checkbox custom-control"><input type="checkbox"
                                                    name="usuarios" id="<%=usuario._id%>"
                                                    class="custom-control-input"><label class="custom-control-label"
                                                    for="<%=usuario._id%>"
                                                    value="<%=usuario._id%>"><%=usuario.nome%></label></div>
                                            <%})%>
                                        </div>
                                    </div>
                                    <input type="submit" class="mt-1 btn btn-primary" value="Salvar">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%-include('../rodape.ejs')%>